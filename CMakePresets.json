{
  "version": 3,
  "configurePresets": [
    {
      "name": "vs2022",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "BUILD_TESTING": "ON",
        "BUILD_SHARED_LIBS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022",
      "configurePreset": "vs2022"
    }
  ],
  "testPresets": [
    {
      "name": "vs2022",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    }
  ]
}